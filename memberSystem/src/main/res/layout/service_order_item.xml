<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dip"
        android:layout_marginStart="5dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/service_applay_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="No.20170909151818"
            android:textColor="@color/item_font_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/reserve_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dip"
            android:background="@drawable/order_date_bg"
            android:paddingEnd="5dip"
            android:paddingStart="5dip"
            android:text="2017-09-09"
            android:textColor="@color/item_second_font_color"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dip"
        android:layout_marginStart="5dip"
        android:layout_marginTop="5dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:scaleType="centerCrop"
            android:src="@drawable/default_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:orientation="vertical"
            android:padding="5dip" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="70dip"
                android:ellipsize="marquee"
                android:text="服务名"
                android:textColor="@color/item_font_color"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3dip"
                    android:paddingTop="3dip"
                    android:text="￥"
                    android:textColor="@color/red"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:lines="3"
                    android:paddingBottom="3dip"
                    android:paddingTop="3dip"
                    android:text="这是有关于服务的介绍。。。。。。"
                    android:textColor="@color/item_second_font_color"
                    android:textSize="16sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:text="￥200"
                    android:textColor="@color/red"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/order_state"
                    android:layout_width="80dip"
                    android:layout_height="30dip"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dip"
                    android:background="@drawable/btn_sm_green_outline"
                    android:gravity="center"
                    android:text="已付款"
                    android:textColor="@color/main_bg_color"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>