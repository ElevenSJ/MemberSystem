<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dip"
        android:layout_marginStart="5dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginTop="5dip"
            android:scaleType="fitCenter"
            android:src="@drawable/renew_fell" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:orientation="vertical"
            android:padding="5dip" >

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="升级 团队领袖"
                android:textColor="@color/item_font_color"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:paddingBottom="3dip"
                    android:paddingTop="3dip"
                    android:singleLine="true"
                    android:text="付费日期: "
                    android:textColor="@color/item_second_font_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pay_date"
                    android:layout_width="110dip"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:paddingBottom="3dip"
                    android:paddingTop="3dip"
                    android:singleLine="true"
                    android:text="2018-09-09"
                    android:textColor="@color/item_second_font_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:paddingBottom="3dip"
                    android:paddingRight="10dip"
                    android:paddingTop="3dip"
                    android:text="￥120000"
                    android:textColor="@color/red"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:paddingBottom="3dip"
                    android:paddingTop="3dip"
                    android:singleLine="true"
                    android:text="付费时长: "
                    android:textColor="@color/item_second_font_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="12个月"
                    android:textColor="@color/item_second_font_color"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:padding="3dip"
                    android:singleLine="true"
                    android:text="  到期日: "
                    android:textColor="@color/item_second_font_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:paddingBottom="3dip"
                    android:paddingTop="3dip"
                    android:singleLine="true"
                    android:text="2022-09-09"
                    android:textColor="@color/item_second_font_color"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>