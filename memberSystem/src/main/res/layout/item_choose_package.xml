<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F1F1F1"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="0dip" >

        <ImageView
            android:id="@+id/package_select"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/checkbox_circle" />

        <TextView
            android:id="@+id/package_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/package_select"
            android:gravity="center_vertical"
            android:paddingLeft="2dp"
            android:text="包装1"
            android:textColor="@color/item_font_color"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/package_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/card" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginRight="24dp"
        android:background="@color/item_line_color" />

</LinearLayout>