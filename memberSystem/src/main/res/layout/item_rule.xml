<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="0dip" >

        <ImageView
            android:id="@+id/rule_iv"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@drawable/rule_icon" />

        <TextView
            android:id="@+id/rule_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="0dip"
            android:drawablePadding="0dip"
            android:drawableRight="@drawable/ic_right_arrow"
            android:gravity="center_vertical"
            android:text="2017-04-30"
            android:textColor="@color/item_second_font_color"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/rule_date"
            android:layout_toRightOf="@id/rule_iv"
            android:orientation="vertical"
            android:paddingLeft="0dip" >

            <TextView
                android:id="@+id/rule_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="51节礼品"
                android:textColor="@color/item_font_color"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="24dp"
        android:background="@color/item_line_color" />

</LinearLayout>