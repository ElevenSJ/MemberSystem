<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:gravity="center_vertical" >

        <com.lyp.membersystem.view.CircleImageView
            android:id="@+id/customer_avater"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:background="@drawable/avater_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/personal" />

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dip"
            android:gravity="center_vertical"
            android:text="黑木耳"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginLeft="60dip"
         >

        <ImageView
            android:id="@+id/good_iv"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:scaleType="centerCrop"
            android:src="@drawable/default_image" />

        <TextView
            android:id="@+id/good_price"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="50dip"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal|bottom"
            android:text="￥21324"
            android:layout_marginEnd="5dip"
            android:layout_marginStart="5dip"
            android:textColor="@color/red"
            android:textSize="18sp" />
        
        <TextView
            android:id="@+id/good_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/good_price"
            android:layout_toRightOf="@id/good_iv"
            android:gravity="center_vertical"
            android:text="本该进入高考考场的高中男生晓刚却走进了看守所，两次深夜抢劫，专挑年轻女子下手，他却声称自己是为了备考。"
            android:lines="3"
            android:textColor="@color/item_font_color"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="24dp"
        android:background="@color/item_line_color" />

</LinearLayout>