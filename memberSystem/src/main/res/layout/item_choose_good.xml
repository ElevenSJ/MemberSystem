<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/customer_avater"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:background="@drawable/avater_bg"
            android:scaleType="centerInside"
            android:src="@drawable/personal" />

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dip"
            android:gravity="center_vertical"
            android:text="黑木耳"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/good_iv1"
                android:layout_width="55dip"
                android:layout_height="55dip"
                android:scaleType="centerCrop"
                android:src="@drawable/default_image" />

            <TextView
                android:id="@+id/good_one_name"
                android:layout_width="55dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:lines="3"
                android:text="商品名称"
                android:textColor="@color/item_second_font_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/good_one"
                android:layout_width="55dip"
                android:layout_height="25dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/btn_sm_green"
                android:gravity="center"
                android:text="已选"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/good_iv2"
                android:layout_width="55dip"
                android:layout_height="55dip"
                android:scaleType="centerCrop"
                android:src="@drawable/default_image" />

            <TextView
                android:id="@+id/good_two_name"
                android:layout_width="55dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:lines="3"
                android:text="商品名称"
                android:textColor="@color/item_second_font_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/good_two"
                android:layout_width="55dip"
                android:layout_height="25dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/btn_grey"
                android:gravity="center"
                android:text="未选"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/good_iv3"
                android:layout_width="55dip"
                android:layout_height="55dip"
                android:scaleType="centerCrop"
                android:src="@drawable/default_image" />

            <TextView
                android:id="@+id/good_three_name"
                android:layout_width="55dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:lines="3"
                android:text="商品名称"
                android:textColor="@color/item_second_font_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/good_three"
                android:layout_width="55dip"
                android:layout_height="25dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/btn_grey"
                android:gravity="center"
                android:text="未选"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="24dp"
        android:background="@color/item_line_color" />

</LinearLayout>