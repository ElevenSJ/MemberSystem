<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_marginStart="15dip"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/order_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="No.201706131659118"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dip"
            android:background="@drawable/order_date_bg"
            android:gravity="center"
            android:paddingEnd="5dip"
            android:paddingStart="5dip"
            android:text="2017-06-13"
            android:textColor="@color/item_second_font_color"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_marginStart="15dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.lyp.membersystem.view.CircleImageView
            android:id="@+id/civ_1"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:background="@drawable/avater_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/personal" />

        <com.lyp.membersystem.view.CircleImageView
            android:id="@+id/civ_2"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginStart="5dip"
            android:background="@drawable/avater_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/personal" />

        <com.lyp.membersystem.view.CircleImageView
            android:id="@+id/civ_3"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginStart="5dip"
            android:background="@drawable/avater_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/personal" />

        <com.lyp.membersystem.view.CircleImageView
            android:id="@+id/civ_4"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginStart="5dip"
            android:background="@drawable/avater_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/personal" />

        <com.lyp.membersystem.view.CircleImageView
            android:id="@+id/civ_5"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginStart="5dip"
            android:background="@drawable/avater_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/personal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dip"
            android:text="客户   x"
            android:textColor="@color/item_second_font_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/customer_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dip"
            android:text="6"
            android:textColor="@color/item_second_font_color"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginStart="15dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/good_iv1"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:scaleType="centerCrop"
            android:src="@drawable/default_image" />

        <ImageView
            android:id="@+id/good_iv2"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:layout_marginStart="5dip"
            android:scaleType="centerCrop"
            android:src="@drawable/default_image" />

        <ImageView
            android:id="@+id/good_iv3"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:layout_marginStart="5dip"
            android:scaleType="centerCrop"
            android:src="@drawable/default_image" />
    </LinearLayout>

    <TextView
        android:id="@+id/order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dip"
        android:lines="2"
        android:text="一二三四五六七八九十"
        android:textColor="@color/item_second_font_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dip"
        android:gravity="center_vertical"
        android:text="共计￥8418"
        android:textColor="@color/red"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        android:layout_marginBottom="15dip"
        android:layout_marginStart="15dip"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/order_state"
            android:layout_width="80dip"
            android:layout_height="30dip"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dip"
            android:background="@drawable/btn_sm_green_outline"
            android:gravity="center"
            android:text="去支付"
            android:textColor="@color/main_bg_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/order_detail"
            android:layout_width="90dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dip"
            android:layout_toLeftOf="@id/order_state"
            android:background="@drawable/btn_sm_grey_outline"
            android:gravity="center"
            android:text="订单详情"
            android:textColor="@color/item_second_font_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/express"
            android:layout_width="90dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dip"
            android:layout_toLeftOf="@id/order_detail"
            android:background="@drawable/btn_sm_grey_outline"
            android:gravity="center"
            android:text="查看物流"
            android:textColor="@color/item_second_font_color"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>