<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_bg_color" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:onClick="onBack" >

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@drawable/back_white" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/back"
                android:scaleType="center"
                android:src="@drawable/nag_white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/my"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/main_bg_color"
                        android:orientation="vertical" >

                        <!-- <com.lyp.membersystem.view.CircleImageView -->
                        <!-- android:layout_width="120dip" -->
                        <!-- android:layout_height="120dip" -->
                        <!-- android:layout_gravity="center_horizontal" -->
                        <!-- android:scaleType="centerInside" -->
                        <!-- android:background="@drawable/avater_bg" -->
                        <!-- android:src="@drawable/avater_login" /> -->

                        <com.lyp.membersystem.view.CircleImageView
                            android:id="@+id/user_avater"
                            android:layout_width="110dip"
                            android:layout_height="110dip"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/avater_bg"
                            android:scaleType="centerCrop"
                            android:src="@drawable/personal" />

                        <TextView
                            android:id="@+id/tv_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:clickable="false"
                            android:gravity="center"
                            android:padding="10dip"
                            android:text="Lyp"
                            android:textColor="@color/white"
                            android:textSize="25sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="20dip"
                            android:layout_marginTop="10dip"
                            android:scaleType="centerCrop"
                            android:src="@drawable/qr_code_white" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="0dip"
                            android:scaleType="center"
                            android:src="@drawable/ic_right_arrow"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/signature"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dip"
                            android:gravity="center_vertical"
                            android:text="我的签名"
                            android:textColor="@color/item_font_color"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/signatureBtn"
                            android:layout_width="80dip"
                            android:layout_height="30dip"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="5dip"
                            android:background="@drawable/btn_sm_green_outline"
                            android:gravity="center"
                            android:text="上传签名"
                            android:textColor="@color/main_bg_color"
                            android:textSize="14sp"
                            android:visibility="invisible" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dip"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="15dip"
                            android:layout_marginStart="20dip"
                            android:layout_toLeftOf="@id/signatureBtn"
                            android:layout_toRightOf="@id/signature"
                            android:gravity="center_vertical" >

                            <ImageView
                                android:id="@+id/iv_signature_base"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:gravity="center_vertical" />

                            <ImageView
                                android:id="@+id/iv_signature"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:gravity="center_vertical" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dp"
                        android:background="@color/item_line_color" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp" >

                        <Button
                            android:id="@+id/renewalBtn"
                            android:layout_width="80dip"
                            android:layout_height="30dip"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="5dip"
                            android:background="@drawable/btn_sm_green_outline"
                            android:gravity="center"
                            android:text="续费/升级"
                            android:textColor="@color/main_bg_color"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/renewal"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dip"
                            android:drawablePadding="2dip"
                            android:drawableStart="@drawable/membei_icon"
                            android:gravity="center_vertical"
                            android:text="@string/member"
                            android:textColor="@color/item_font_color"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_renewal"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dip"
                            android:layout_toLeftOf="@id/renewalBtn"
                            android:layout_toRightOf="@id/renewal"
                            android:gravity="center_vertical"
                            android:text="有效期至2018-05-21"
                            android:textColor="@color/item_second_font_color"
                            android:textSize="18sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dp"
                        android:background="@color/item_line_color"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/layout_queryapplyservice"
                        android:layout_width="match_parent"
                        android:layout_height="65dp">

                        <TextView
                            android:id="@+id/txt_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dip"
                            android:visibility="visible"
                            android:textColor="@color/red"
                            android:text="0"/>

                        <TextView
                            android:id="@+id/service_apply"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dip"
                            android:drawablePadding="2dip"
                            android:drawableStart="@drawable/service_apply_icon"
                            android:gravity="center_vertical"
                            android:text="我的钱包"
                            android:textColor="@color/item_font_color"
                            android:textSize="20sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dp"
                        android:background="@color/item_line_color" />

                    <RelativeLayout
                        android:id="@+id/layout_cardPackBtn"
                        android:layout_width="match_parent"
                        android:layout_height="65dp">

                        <ImageView
                            android:id="@+id/card_right_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="0dip"
                            android:scaleType="center"
                            android:src="@drawable/ic_right_arrow"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/card"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dip"
                            android:drawablePadding="2dip"
                            android:drawableStart="@drawable/card_pack"
                            android:gravity="center_vertical"
                            android:text="我的卡包"
                            android:textColor="@color/item_font_color"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_card"
                            android:layout_width="30dip"
                            android:layout_height="30dip"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dip"
                            android:layout_toLeftOf="@id/card_right_arrow"
                            android:background="@drawable/red_circle_bg"
                            android:clickable="false"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dp"
                        android:background="@color/item_line_color" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:onClick="systemMessage">

                        <ImageView
                            android:id="@+id/express_address_right_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="0dip"
                            android:scaleType="center"
                            android:src="@drawable/ic_right_arrow"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/express_address"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dip"
                            android:drawablePadding="2dip"
                            android:drawableStart="@drawable/express_address"
                            android:gravity="center_vertical"
                            android:text="系统通知"
                            android:textColor="@color/item_font_color"
                            android:textSize="20sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dp"
                        android:background="@color/item_line_color" />

                    <RelativeLayout
                        android:id="@+id/layout_notForget"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp">

                        <ImageView
                            android:id="@+id/not_forget_right_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="0dip"
                            android:scaleType="center"
                            android:src="@drawable/ic_right_arrow"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/not_forget"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dip"
                            android:drawablePadding="2dip"
                            android:drawableStart="@drawable/settings_icon"
                            android:gravity="center_vertical"
                            android:text="跪求勿忘"
                            android:textColor="@color/item_font_color"
                            android:textSize="20sp" />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dp"
                        android:background="@color/item_line_color" />
                    <RelativeLayout
                        android:id="@+id/layout_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp">

                        <ImageView
                            android:id="@+id/settings_right_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="0dip"
                            android:scaleType="center"
                            android:src="@drawable/ic_right_arrow"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/settings"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dip"
                            android:drawablePadding="2dip"
                            android:drawableStart="@drawable/settings_icon"
                            android:gravity="center_vertical"
                            android:text="设置"
                            android:textColor="@color/item_font_color"
                            android:textSize="20sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dp"
                        android:background="@color/item_line_color"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/exitBtn"
                        android:layout_width="match_parent"
                        android:layout_height="60dip"
                        android:layout_marginBottom="20dip"
                        android:layout_marginEnd="10dip"
                        android:layout_marginStart="10dip"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/btn_red_selector"
                        android:gravity="center"
                        android:text="退出"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:visibility="gone" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <!--                    <ImageView -->
                    <!--                         android:id="@+id/q_iv" -->
                    <!--                         android:layout_width="80dip" -->
                    <!--                         android:layout_height="220dip" -->
                    <!--                         android:layout_alignParentRight="true" -->
                    <!--                         android:layout_marginRight="20dip" -->
                    <!--                         android:onClick="qGraphSelect" -->
                    <!--                         android:src="@drawable/default_q_icon" -->
                    <!--                         android:scaleType="center" /> -->


                    <ImageView
                        android:id="@+id/q_iv"
                        android:layout_width="80dip"
                        android:layout_height="220dip"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dip"
                        android:scaleType="center"
                        android:src="@drawable/default_q_icon" />
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>